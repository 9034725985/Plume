{% extends "base" %}
{% import "macros" as macros %}

{% block title %}
{{ instance.name }}
{% endblock title %}

{% block content %}
    <h1>{{ _(t="Welcome on {{ instance_name }}", instance_name=instance.name) }}</h1>

    <h2>Latest articles</h2>
    <div class="cards">
        {% for article in recents %}
            {{ macros::post_card(article=article) }}
        {% endfor %}
    </div>
{% endblock content %}
